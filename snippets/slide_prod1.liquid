<script
  src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"
></script>
<link
  href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css"
  rel="stylesheet"
>
{% style %}
  .onimg{
    position: absolute !important;
    bottom:10%;
    left: 5%;
  }
  .mw1 .splide__arrow{
    display:none;
  }
  .mw1 .splide__pagination {
    display:none;
  }
  .onimg1{
    position: absolute !important;
    bottom:20%;
    left:15%;
  }
  .mw1{
        height: 90px;
display:none;
  }
  .mw1 li img{
    border-radius: 35px;
  }
  @media screen and (max-width: 768px) {
    .mw1 {
     
display:block !important;
       
    }
  }
{% endstyle %}
{% if section.settings.divider %}
  <div class="section--divider">
{% endif %}

<div class="mw1" style="width:100%;margin: 15px 0 0 0%;">
  <section class="splide top1" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
        <li class="splide__slide">
          <img
            style="width:70px;height:70px"
            src="https://cdn.shopify.com/s/files/1/0773/3870/6204/files/notebook.jpg?v=1698992185"
            alt="Slider Image"
          >
          <p style="color:white;font-size: 13px;text-align: center;">Notebook</p>
        </li>
        
          
       
        <li class="splide__slide">
          <img
            style="width:70px;height:70px"
            src="https://cdn.shopify.com/s/files/1/0773/3870/6204/files/envelope.jpg?v=1698992185"
            alt="Slider Image"
          >
          <p style="color:white;font-size: 13px;text-align: center;">Envelope</p>
        </li>
        <li class="splide__slide" style="justify-content: center;display: grid;align-items: center;">
          <img
            style="width:70px;height:70px"
            class="relative"
            src="https://cdn.shopify.com/s/files/1/0773/3870/6204/files/planner.jpg?v=1698992185"
            alt="Slider Image"
          >
          <p style="color:white;font-size: 13px;text-align: center;">Planners</p>
        </li>
         <li class="splide__slide" style="justify-content: center;display: grid;align-items: center;">
          <img
            style="width:70px;height:70px"
            class="relative"
            src="https://cdn.shopify.com/s/files/1/0773/3870/6204/files/folder.jpg?v=1698992185"
            alt="Slider Image"
          >
          <p style="color:white;font-size: 13px;text-align: center;">Folders</p>
        </li>
         <li class="splide__slide" style="justify-content: center;display: grid;align-items: center;">
          <img
            style="width:70px;height:70px"
            class="relative"
            src="https://cdn.shopify.com/s/files/1/0773/3870/6204/files/luggage.jpg?v=1698992185"
            alt="Slider Image"
          >
          <p style="color:white;font-size: 13px;text-align: center;">Luggage </p>
        </li>
         <li class="splide__slide" style="justify-content: center;display: grid;align-items: center;">
          <img
            style="width:70px;height:70px"
            class="relative"
            src="https://cdn.shopify.com/s/files/1/0773/3870/6204/files/notecards.jpg?v=1698992184"
            alt="Slider Image"
          >
          <p style="color:white;font-size: 13px;text-align: center;">Notecards</p>
        </li>
         
      </ul>
    </div>
  </section>
  <br>
</div>
{% if section.settings.divider %}
  </div>
{% endif %}
<script>
    var splide = new Splide( '.top1', {
    perPage: 4,
      perMove: 1,
   
    rewind : true,
      gap : '1.5rem',
      breakpoints: {
              640: {
                perPage: 3,

              },
              767: {
                perPage: 5,

              },
              1024: {
                perPage: 5,

              },
            },
  } );

  splide.mount();
</script>
